<?xml version="1.0" encoding="UTF-8"?>
<database name="default" namespace="CP\Terms\UserBundle\model" defaultIdMethod="native">
    <table name="user_profile" phpName="Profile" >
        <column name="user_id" type="integer" required="true" primaryKey="true" />
        <column name="gender" type="tinyint" size="1" />
        <column name="surname" type="varchar" size="100" />
        <column name="given_names" type="varchar" size="100" />
        <foreign-key foreignTable="fos_user" name="FI_profile_user">
            <reference local="user_id" foreign="id"/>
        </foreign-key>
        <behavior name="typehintable">
            <parameter name="fos_user" value="FOS\UserBundle\Model\UserInterface" />
        </behavior>
		<behavior name="tos"></behavior>
    </table>
</database>
