{% trans_default_domain "cpterms_demo" %}

{% set datetime_format = 'd/m/y H:i' %}

{% spaceless %}
{
	"draw": "{{ app.request.query.all.draw }}",
	"recordsTotal": {{ total_count }},
	"recordsFiltered": {{ filtered_count }},
	"data" : [
		{% for user in users %}
			{
				"DT_RowId": "user_{{ user.id }}",
				"DT_RowClass": "{{ 'user' }}",
				"username": "{{ user.username }}",
				"last_login": "{{ user.lastLogin|date(datetime_format) }}",
				"tos": "{{ user.profile.lastAgreedTerms ? user.profile.lastAgreedTerms.version : ''  }}",
				"agreed_on": "{{ user.profile.lastAgreedTerms ? user.profile.lastAgreedTerms.getAgreedAt()|date(datetime_format) : '' }}",
				"actions": "{% include 'CPTermsDemoBundle:UserAdmin:users_actions.html.twig' %}"
			}{% if not loop.last %},{% endif %}
		{% endfor %}
	]
}
{% endspaceless %}
